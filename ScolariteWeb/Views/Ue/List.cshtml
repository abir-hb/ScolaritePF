@model IEnumerable<Scolarite.Domain.entities.EspUe>

@{
    ViewData["Title"] = "List";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="card-header">
            <h3 class="card-title">AFFECTATION DES CLASSES PAR MODULES </h3>
        </div>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="card">

            <!-- /.card-header -->
            <div class="card-body">
                <style>
                    .table_wrapper {
                        display: block;
                        width: 1000px;
                        /* overflow-x: auto;*/
                        vertical-align: middle;
                    }

                    .table-striped th {
                        vertical-align: middle;
                    }

                    .table-striped td {
                        vertical-align: top;
                    }

                    #parent {
                        width: 1000px;
                    }

                    #child-left {
                        float: left;
                        width: 200px;
                    }

                    #child-right {
                        float: right;
                        width: 800px;
                    }
                </style>
                <div class="box" id="parent">
                    <div class="table_wrapper">
                        <div class="box-body" id="child-right">
                            <table id="example1" class="table table-bordered table-striped" align="center">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.LibUe)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.NbEcts)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ChargeH)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TypeUe)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.NatureUe)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CodeFiliereNavigation)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LibUe)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NbEcts)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ChargeH)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TypeUe)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NatureUe)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CodeFiliereNavigation.CodeFiliere)
                                            </td>
                                            <td>
                                                <button class="btn btn-light">@Html.ActionLink("SUPPRIMER", "Delete", new { id = item.CodeUe })</button>
                                                <button class="btn btn-light">@Html.ActionLink("DETAILS", "Delete", new { id = item.CodeUe })</button>
                                                <button class="btn btn-light">@Html.ActionLink("MODIFIER", "Edit", new { id = item.CodeUe })</button>

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div id="child-left"></div>


                    </div>
                </div>
            </div>
        </div>

    </section>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
