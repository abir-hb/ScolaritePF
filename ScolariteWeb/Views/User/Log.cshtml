@model Scolarite.Domain.entities.Appuser

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<h4>@ViewBag.Message</h4>

<hr />
@if (string.IsNullOrEmpty(ViewBag.LTLD))
{
    <p class="text-muted">vous allez vous connecter pour la prèmiere fois à notre systéme</p>
}
else
{
    <p class="text-muted"> votre dernière connexion était à @ViewBag.LTLD</p>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Loginname" class="control-label">Login</label>
                <input asp-for="Loginname" class="form-control" />
                <span asp-validation-for="Loginname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
